{
  "compilerOptions": {
    "baseUrl": "./",
    "rootDir": "../",
    "target": "esnext",
    "useDefineForClassFields": true,
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "types": ["vite-plugin-vue-layouts/client", "vite-plugin-pages/client"],
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": ["esnext", "dom"]
  },

  "include": ["./**/*"]
}
